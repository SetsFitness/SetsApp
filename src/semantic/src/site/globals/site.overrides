/*******************************
         Site Overrides
*******************************/

body {
  background-color: @bgColor;
}

// **
// * Utility Classes
// * !important are necessary due to Semantic's non-singular
// * approach to style selectors. In a better scenario, the
// * CSS framework would be entirely singular and rely on the
// * cascade for specificity.
// **

.u-bg--primaryGradient {
  background-image: @primaryGradient !important;
}

.u-container {
  background-color: @darkBlack;
  margin-bottom: 24px;
  padding: 24px 24px 0;
}

.u-avatar {
  width: 100px;
  height: 100px;
  background-size: cover;
  background-position: center;
  border: 2px solid @black;
  border-radius: 50%;
  position: relative;
}

.u-avatar--small {
  width: 50px;
  height: 50px;
}

.u-avatar--large {
  width: 125px;
  height: 125px;
}

.u-bg--bg {
  background: @bgColor !important;
}

.u-margin-bottom--neg2 {
  margin-bottom: -24px !important;
}

.u-margin-top--neg4 {
  margin-top: -32px !important;
}

.u-margin-top--0 {
  margin-top: 0 !important;
}

.u-margin-top--1 {
  margin-top: 8px !important;
}

.u-margin-top--2 {
  margin-top: 16px !important;
}

.u-margin-right--0 {
  margin-right: 0 !important;
}

.u-margin-bottom--1 {
  margin-bottom: 8px !important;
}

.u-margin-bottom--2 {
  margin-bottom: 16px !important;
}

.u-margin-x--auto {
  margin-left: auto;
  margin-right: auto;
}

.u-margin-left--2 {
  margin-left: 16px !important;
}

.ui.u-padding-left--1 {
  padding-left: 8px !important;
}

// Flex

.u-flex {
  display: flex;
}

.u-flex-align--center {
  align-items: center;
}

.u-flex-justify--center {
  justify-content: center;
}

.u-button--flat {
  display: inline !important;
  padding: 0 !important;
  color: @linkColor !important;
  box-shadow: none !important;
  border: none !important;
  background: none !important;
}